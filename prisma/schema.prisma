generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:kdfp9$ytuhJ4MYP4Oun@localhost:3306/mydb"
}

model Post {
  id Int @id @default(autoincrement())
  photo String
  author Author @relation(fields: [authorId], references: [id])
  authorId Int
  title String @db.VarChar(50)
  desc String @db.Text
  rank Int @default(0)
}

model Author {
  id Int @id @default(autoincrement())
  name String @db.VarChar(100)
  posts Post[]
}
